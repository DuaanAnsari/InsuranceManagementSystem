@model IEnumerable<Modules.Models.PoliciesInfo>

@{
    Layout = "_Layout_Admin";
    ViewData["Title"] = "Policy";
}

<h1>Policy</h1>

<p>
    <a asp-action="CreatePolicy">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PolicyName)
            </th>
            <th>
                Details
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMI)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyName)
            </td>
            <td>
               ...
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMI)
            </td>
            <td>
                <a asp-action="EditPolicy" asp-route-id="@item.PolicyId">Edit</a> |
                <a asp-action="PolicyDetail" asp-route-id="@item.PolicyId">Details</a> |
                <a asp-action="DeletePolicy" asp-route-id="@item.PolicyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
